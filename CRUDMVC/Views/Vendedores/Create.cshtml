@model CRUDMVC.Models.ViewModels.VendedorFormViewModel
@{
    ViewData["Title"] = "Cadastro de Vendedor";

}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vendedor.Nome" class="control-label"> Nome </label>
                <input asp-for="Vendedor.Nome" class="form-control" />
                <span asp-validation-for="Vendedor.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label">E-mail</label>
                <input asp-for="Vendedor.Email" class="form-control" />
                <span asp-validation-for="Vendedor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DataAniversario" class="control-label">Data de aniversário</label>
                <input asp-for="Vendedor.DataAniversario" class="form-control" />
                <span asp-validation-for="Vendedor.DataAniversario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.SalarioBase" class="control-label">Salário</label>
                <input asp-for="Vendedor.SalarioBase" class="form-control" />
                <span asp-validation-for="Vendedor.SalarioBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartamentosId" class="control-label">Departamento</label>
                <select asp-for="Vendedor.DepartamentosId" asp-items="@(new SelectList(Model.Departamentos, "Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
